@model SIMS_Project.Models.Student

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<div class="container mt-4">
    <div class="alert alert-danger">
        <h3>⚠️ Bạn có chắc muốn xóa sinh viên này không?</h3>
        <p>Hành động này không thể hoàn tác.</p>
    </div>

    <div class="card p-3 mb-3">
        <dl class="row">
            <dt class="col-sm-2">Họ tên:</dt>
            <dd class="col-sm-10"><strong>@Model.FullName</strong></dd>

            <dt class="col-sm-2">Email:</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Lớp:</dt>
            <dd class="col-sm-10">@Model.ClassName</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa luôn</button>
        <a asp-action="Index" class="btn btn-secondary">Thôi, quay lại</a>
    </form>
</div>