@model SIMS_Project.Models.Course
@{
    ViewData["Title"] = "Course Manager";
    var assignments = ViewBag.Assignments as List<SIMS_Project.Models.Assignment>;
    var materials = ViewBag.Materials as List<SIMS_Project.Models.Material>;
}

<div class="container mt-4">
    <a asp-action="Index" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>

    <div class="card shadow-sm mb-4">
        <div class="card-body bg-primary text-white rounded">
            <h2>@Model.CourseCode - @Model.CourseName</h2>
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h4 class="d-flex justify-content-between align-items-center">
                Assignments
                <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#createAsmModal">+ New Assignment</button>
            </h4>
            <hr />
            @if (assignments != null && assignments.Any())
            {
                <div class="list-group">
                    @foreach (var asm in assignments)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">@asm.Title</h5>
                                <small class="text-muted">Due: @asm.DueDate.ToString("dd/MM/yyyy")</small>
                            </div>
                            <a asp-action="ViewSubmissions" asp-route-assignmentId="@asm.Id" class="btn btn-outline-primary btn-sm">
                                View Submissions & Grade
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No assignments created yet.</p>
            }
        </div>

        <div class="col-md-4">
            <h4 class="d-flex justify-content-between align-items-center">
                Materials
                <button class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#uploadMaterialModal">+ Upload</button>
            </h4>
            <hr />
            <ul class="list-group">
                @if (materials != null)
                {
                    foreach (var mat in materials)
                    {
                        <li class="list-group-item">
                            <a href="~/uploads/@mat.FilePath" target="_blank">@mat.Title</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

<div class="modal fade" id="createAsmModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="CreateAssignment" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Assignment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="courseId" value="@Model.Id" />
                    <div class="mb-3">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Due Date</label>
                        <input type="datetime-local" name="dueDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Description</label>
                        <textarea name="description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="uploadMaterialModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="UploadMaterial" method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upload Material</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="courseId" value="@Model.Id" />
                    <div class="mb-3">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>File</label>
                        <input type="file" name="file" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </form>
    </div>
</div>