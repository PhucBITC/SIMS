@model List<SIMS_Project.Models.Enrollment>
@{
    ViewData["Title"] = "Quản lý Đăng ký";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📝 Danh sách Đăng ký Môn học</h2>
        <a asp-action="Create" class="btn btn-primary">
            + Đăng ký môn mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên Sinh viên</th>
                        <th>Môn học đăng ký</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-bold">@item.StudentName</td>
                                <td><span class="badge bg-primary">@item.CourseName</span></td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Hủy đăng ký</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                <em>Chưa có dữ liệu đăng ký nào.</em>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>