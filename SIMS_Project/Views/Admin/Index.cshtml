@{
    ViewData["Title"] = "Admin Dashboard Overview";
}

<div class="container-fluid my-4">
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm border-start border-success border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="text-secondary fw-bold text-uppercase small">Doanh thu tháng</div>
                        <div class="text-success bg-success bg-opacity-10 p-2 rounded">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                    <h3 class="card-title fw-bold mb-0">$24,500</h3>
                    <small class="text-success fw-bold"><i class="fas fa-arrow-up"></i> 12%</small>
                    <small class="text-muted">so với tháng trước</small>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm border-start border-primary border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="text-secondary fw-bold text-uppercase small">Học viên mới</div>
                        <div class="text-primary bg-primary bg-opacity-10 p-2 rounded">
                            <i class="fas fa-user-plus"></i>
                        </div>
                    </div>
                    <h3 class="card-title fw-bold mb-0">120</h3>
                    <small class="text-danger fw-bold"><i class="fas fa-arrow-down"></i> 5%</small>
                    <small class="text-muted">tuần này</small>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm border-start border-warning border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="text-secondary fw-bold text-uppercase small">Chờ duyệt GV</div>
                        <div class="text-warning bg-warning bg-opacity-10 p-2 rounded">
                            <i class="fas fa-user-clock"></i>
                        </div>
                    </div>
                    <h3 class="card-title fw-bold mb-0">3</h3>
                    <small class="text-muted">yêu cầu đang chờ xử lý</small>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm border-start border-info border-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="text-secondary fw-bold text-uppercase small">Khóa học hoạt động</div>
                        <div class="text-info bg-info bg-opacity-10 p-2 rounded">
                            <i class="fas fa-book-open"></i>
                        </div>
                    </div>
                    <h3 class="card-title fw-bold mb-0">30</h3>
                    <small class="text-muted">trên tổng số 35 khóa</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 fw-bold">🔥 Khóa học nổi bật tháng này</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tên khóa học</th>
                                <th>Giảng viên</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                                <th>Doanh số</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded p-2 me-2"><i class="fab fa-react"></i></div>
                                        <div>
                                            <div class="fw-bold">ReactJS Advanced</div>
                                            <small class="text-muted">Web Development</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Jane Smith</td>
                                <td>$49.99</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">80%</span>
                                        <div class="progress" style="width: 100px; height: 6px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 80%"></div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-warning text-dark rounded p-2 me-2"><i class="fab fa-python"></i></div>
                                        <div>
                                            <div class="fw-bold">Python for AI</div>
                                            <small class="text-muted">Data Science</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Dr. Alan</td>
                                <td>$89.99</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">65%</span>
                                        <div class="progress" style="width: 100px; height: 6px;">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 65%"></div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info text-white rounded p-2 me-2"><i class="fas fa-paint-brush"></i></div>
                                        <div>
                                            <div class="fw-bold">UI/UX Fundamental</div>
                                            <small class="text-muted">Design</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Sarah L.</td>
                                <td>$29.99</td>
                                <td><span class="badge bg-secondary">Draft</span></td>
                                <td>
                                    <small class="text-muted">Chưa publish</small>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">⚡ Thao tác nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i> Tạo khóa học mới</button>
                        <button class="btn btn-outline-dark"><i class="fas fa-user-check me-2"></i> Duyệt giảng viên (3)</button>
                        <button class="btn btn-outline-secondary"><i class="fas fa-file-export me-2"></i> Xuất báo cáo tháng</button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">🔔 Hoạt động gần đây</h5>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 text-primary">Alice Nguyen</h6>
                            <small class="text-muted">3p trước</small>
                        </div>
                        <p class="mb-1 small">Đã đăng ký khóa học <strong>ReactJS Advanced</strong>.</p>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 text-danger">System Alert</h6>
                            <small class="text-muted">1h trước</small>
                        </div>
                        <p class="mb-1 small">Có 5 báo cáo nội dung vi phạm từ khóa học SEO Basic.</p>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Bob Tran</h6>
                            <small class="text-muted">2h trước</small>
                        </div>
                        <p class="mb-1 small">Đánh giá 5 sao cho giảng viên <strong>Jane Smith</strong>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>