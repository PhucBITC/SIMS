@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-4">
    <!-- Statistics -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2 text-primary fs-2">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h3 class="card-title">120</h3>
                    <p class="card-text text-muted">Total Students</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2 text-warning fs-2">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <h3 class="card-title">15</h3>
                    <p class="card-text text-muted">Total Instructors</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2 text-danger fs-2">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h3 class="card-title">5</h3>
                    <p class="card-text text-muted">Total Admins</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2 text-success fs-2">
                        <i class="fas fa-book"></i>
                    </div>
                    <h3 class="card-title">30</h3>
                    <p class="card-text text-muted">Total Courses</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="row g-4">
        <!-- User Management -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">User Management</h5>
                </div>
                <div class="card-body p-0 table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>johndoe</td>
                                <td>john@example.com</td>
                                <td><span class="badge bg-primary">Student</span></td>
                                <td>
                                    <select class="form-select form-select-sm d-inline w-auto">
                                        <option selected>Student</option>
                                        <option>Instructor</option>
                                        <option>Admin</option>
                                    </select>
                                    <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>janesmith</td>
                                <td>jane@example.com</td>
                                <td><span class="badge bg-warning text-dark">Instructor</span></td>
                                <td>
                                    <select class="form-select form-select-sm d-inline w-auto">
                                        <option>Student</option>
                                        <option selected>Instructor</option>
                                        <option>Admin</option>
                                    </select>
                                    <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recent Activities</h5>
                </div>
                <div class="card-body p-0">
                    <div class="d-flex align-items-center border-bottom p-2">
                        <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-2"
                             style="width:40px;height:40px;">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Alice</h6>
                            <small class="text-muted">Registered - Mar 10, 2024 3:45 PM</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center border-bottom p-2">
                        <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-2"
                             style="width:40px;height:40px;">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Bob</h6>
                            <small class="text-muted">Enrolled in Course - Mar 12, 2024 11:20 AM</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>