<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIMS_Project.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- HEADER - KHÔNG BỊ BỌC TRONG CONTAINER -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SIMS_Project</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-dark" asp-controller="Student" asp-action="Index">Manage Student</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-dark" asp-controller="Course" asp-action="Index">Manage Course</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-dark" asp-controller="Enrollment" asp-action="Index">Đăng ký Môn học</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Features</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Why Choose Us</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-primary">Xin chào, <strong>@User.Identity.Name</strong>!</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm mt-1 ms-2" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm mt-1" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <!-- BODY CONTENT - BẠN MUỐN CONTAINER THÌ ĐỂ BÊN TRONG -->
    <main role="main" class="pb-0">
        <div class="container">
            @RenderBody()
        </div>
    </main>


    <!-- FOOTER -->
    <footer class="container text-center p-4 bg-light">
        &copy; 2024 - SIMS_Project -
        <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
