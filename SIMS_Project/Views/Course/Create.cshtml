@model SIMS_Project.Models.Course
@{
    ViewData["Title"] = "Create Course";
}

<div class="container mt-4">
    <h2>Create Course</h2>
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="CourseCode" class="form-label"></label>
            <input asp-for="CourseCode" class="form-control" />
            <span asp-validation-for="CourseCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CourseName" class="form-label"></label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="InstructorId" class="form-label">Assign Instructor</label>
            <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.Instructors">
                <option value="">-- Select Instructor --</option>
            </select>
            <span asp-validation-for="InstructorId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>