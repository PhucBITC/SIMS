@model SIMS_Project.Models.Course

@{
    ViewData["Title"] = "Thêm Khóa học mới";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Thêm Khóa học mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mã môn học</label>
                            <input asp-for="CourseCode" class="form-control" placeholder="Ví dụ: PRN211" />
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên khóa học</label>
                            <input asp-for="CourseName" class="form-control" placeholder="Ví dụ: Lập trình C# nâng cao" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Số tín chỉ</label>
                            <input asp-for="Credits" type="number" min="1" max="5" class="form-control" />
                            <span asp-validation-for="Credits" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success">Lưu khóa học</button>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>